{
  "$schema": "./feno.schema.json",
  "rendering": {
    "outfile": "styles.css",
    "renderAtoms": true,
    "renderElementRecipes": true,
    "renderElementSelectors": false
  },
  "themes": [
    {
      "prefix": "lgt",
      "tokens": {
        "colors": {
          "black": "hsl(0,100%,0%)",
          "white": "hsl(100,100%,100%)",
          "grey": "hsl(100,100%,50%)"
        },
        "fonts": {
          "a": "Arial",
          "b": "Arial",
          "c": "Arial"
        }
      },
      "elements": {
        "button": "lgt_bgc_black lgt_fc_white lgt_ff_a"
      }
    },
    {
      "prefix": "drk",
      "tokens": {
        "colors": {
          "black": "hsl(0,100%,0%)",
          "white": "hsl(100,100%,100%)",
          "grey": "hsl(100,100%,50%)"
        },
        "fonts": {
          "a": "Times",
          "b": "Times",
          "c": "Times"
        }
      },
      "elements": {
        "button": "drk_bgc_black drk_fc_white drk_ff_a"
      }
    }
  ]
}
