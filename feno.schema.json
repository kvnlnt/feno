{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/product.schema.json",
  "$defs": {
    "hsl": {
      "description": "HSL value",
      "type": "string",
      "pattern": "^hsl\\(\\s*(0|[1-9]\\d?|[12]\\d\\d|3[0-5]\\d)\\s*,\\s*((0|[1-9]\\d?|100)%)\\s*,\\s*((0|[1-9]\\d?|100)%)\\s*\\)$"
    }
  },
  "title": "Feno",
  "description": "Feno types",
  "type": "object",
  "properties": {
    "outfile": {
      "description": "Settings globally available to all themes",
      "type": "string",
      "default": "styles.css"
    },
    "themes": {
      "type": "array",
      "items": {
        "description": "Settings globally available to all themes",
        "type": "object",
        "properties": {
          "prefix": {
            "description": "Prefix",
            "type": "string",
            "default": "f"
          },
          "tokens": {
            "description": "Theme tokens",
            "type": "object",
            "properties": {
              "colors": {
                "description": "Colors",
                "type": "object",
                "properties": {
                  "black": {
                    "$ref": "#/$defs/hsl",
                    "default": "hsl(0,100%,100%)"
                  },
                  "white": {
                    "$ref": "#/$defs/hsl",
                    "default": "hsl(100,100%,100%)"
                  },
                  "grey": {
                    "$ref": "#/$defs/hsl",
                    "default": "hsl(100,100%,100%)"
                  }
                },
                "required": ["black", "white", "grey"]
              },
              "fonts": {
                "description": "Fonts",
                "type": "object",
                "properties": {
                  "a": {
                    "description": "Primary font",
                    "type": "string",
                    "default": "Arial"
                  },
                  "b": {
                    "description": "Secondary font",
                    "type": "string",
                    "default": "Arial"
                  },
                  "c": {
                    "description": "Secondary font",
                    "type": "string",
                    "default": "Arial"
                  }
                },
                "required": ["a", "b", "c"]
              }
            },
            "required": ["colors"]
          }
        },
        "required": ["prefix", "tokens"]
      }
    }
  },
  "required": ["outfile", "themes"]
}
